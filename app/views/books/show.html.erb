<p><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <div class="sidebar_content">
        <h1>User info</h1>
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %><br>
        <table class="table">
          <tr>
            <td>name</td> <td><%= @user.name %></td>
          </tr>
          <tr>
            <td>introduction</td> <td><%= @user.introduction %></td>
          </tr>         
        </table>

        <% if @user.id == current_user.id %>
          <div class="col-xs-12">
            <%= link_to edit_user_path(@user) do %><button type="button" class="btn btn-default btn-block" ><span class="glyphicon glyphicon-wrench" aria-hidden="true" ></span></button><% end %>
          </div>
        <% end %>

      </div>

      <div class="sidebar_content">
      <h2>New book</h2>
        <%= form_for(@new_book) do |f| %>
          <% if @new_book.errors.any? %>
          <ul>
            <p>error</p>
            <% @new_book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
          <% end %>
          <h4>Title</h4>
          <%= f.text_field :title %>
        
          <h4>Opinion</h4>
          <%= f.text_area :body %>
        
          <%= f.submit 'Create Book', class: "btn btn-primary" %> 
        
        <% end %>
      </div>
    </div>
  
    <p><%= notice %></p>

    <div class="col-xs-9">
      <h1>Book detail</h1>
      <table class="table">
        <tbody>
          <tr>
            <td><%= link_to user_path(@book.user.id) do %><%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class: "img-circle pull-left profile-thumb" %><%= @book.user.name %><% end %></td>
            <td><%= link_to @book.title, book_path(@book.id) %></td>
            <td><%= @book.body %></td>
          <% if @user.id == current_user.id %>
            <td><button type="button" class="btn btn-default btn-success"><%= link_to "Edit", edit_book_path(@book.id) %></button></td>
            <td><button type="button" class="btn btn-default btn-danger"><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "Are you sure?" %></button></td>
          <% end %>
          </tr>
        </tbody>
      </table>
    </div>
    
  </div>
</div>