<h1> User info</h1>
<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <ul>
      <p>error</p>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
    </ul>          
  <% end %>
  <h4>Name</h4>
  <%= f.text_field :name %>
  <h4>Image</h>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
  <h4>Introduction</h4>
  <%= f.text_area :introduction %>
  <%= f.submit 'Update User' %> 
<% end %>

