<div class="container">
  <h2> User info</h2>
  <%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
      <ul>
        <p>error</p>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
      </ul>          
    <% end %>

  
    
    Name
    <%= f.text_field :name %>
    
    <p>Image</p>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>

    Introduction
    <%= f.text_area :introduction %><br>
    <%= f.submit 'Update User' %> 
  
  <% end %>
</div>

<p><%= notice %></p>