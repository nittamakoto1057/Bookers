
<p><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <div class="sidebar_content">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %><br>
      <table class="table">
        <tr>
          <th>name</td> <td><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</td> <td><%= @user.introduction %></th>
        </tr>
        
      </table>
        <% if @user.id == current_user.id %>
          <div class="row">
            <%= link_to edit_user_path(@user) do %><button type="button" class="col-xs-12 btn btn-default btn-block" ><span class="glyphicon glyphicon-wrench" aria-hidden="true" ></span></button><% end %>
          </div>
        <% end %>
      </div>

      <div class="sidebar_content">
        <h2>New book</h2>

        <%= form_for(@book) do |f| %>
          <% if @book.errors.any? %>
          <ul>
          <p>error</p>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
            <% end %>

            <div class="row">
              <h5>Title</h5>
              <%= f.text_field :title, class: "col-xs-12" %>
            </div>
          
            <div class="row">
              <h5>Opinion</h5>
              <%= f.text_area :body, class: "col-xs-12" %>
            </div><br>

            <div class="row">
              <%= f.submit 'Create Book', class: " col-xs-12 btn btn-primary btn-block" %>
            </div>
        <% end %>
      </div>
    </div>
  


    <div class="col-xs-9">
      <h2>Users</h2>
      <table class="table">
      <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th></th>
      </tr>
    </thead>
  
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class: "img-circle pull-left profile-thumb" %></td>
          <td><%= user.name %></td>
          <td><%= link_to 'Show', user_path(user.id) %></td>
        </tr>
      <% end %>
    </tbody>
      </table>
    </div>
  
    
  </div>
</div>